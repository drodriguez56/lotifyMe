<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>Please fix <%= pluralize(@user.errors.count, "error") %>:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-content">
<center>
  <div class="row">
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, placeholder: "Email" %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <div class="actions">
      <%= submit_tag 'signup', class: "button small default radius nav-button" %>
    </div>
  </div>
</center>
</div>

<% end %>
