<!DOCTYPE html>
<html>
<head>
  <title>LotifyMe</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="<%= asset_path 'favicon-32x32.png' %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body >
  <div class="off-canvas-wrap" data-offcanvas>
    <div class="inner-wrap">
      <header>
        <%= render partial: "/layouts/navigation", locals: {user: @user }%>
      </header>
      <% if flash[:error] %>
        <div class='error_message'><p class="notice"><%= flash[:error] %></p></div>
      <% elsif flash[:notice] %>
        <div class='notice_message'><p class="notice"><%= flash[:notice] %></p></div>
      <% end -%>
      <section class="main-section">
        <%= yield %>
      </section>
      <a class="exit-off-canvas" href="#"></a>
  </div>
</div>

</body>

</html>
