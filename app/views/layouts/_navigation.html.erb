<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<nav class="top-bar hide-for-small" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <div class="logo">
        <span><h1><a href="/">Lotify Me</a></h1></span>
      </div>
    </li>
  </ul>

 <section class="top-bar-section">
  <ul class="right">
    <li>
     <% if !session[:user_id] %>
      <li><%= link_to 'LOGIN', login_path %></li>
      <li><%= link_to 'SIGN UP', signup_path %></li>
     <% else %>
      <% @session_id = session[:user_id] %>
      <li class="active" >
        <a href="/users/<%= session[:user_id] %>"><%= User.find(@session_id).username %></a>
      </li>
      <li>
        <%= link_to 'MY PROFILE', user_path(@session_id) %>
      </li>
      <li>
        <%= link_to 'EDIT PROFILE', edit_user_path(@session_id) %>
      </li>
      <li>
        <%= link_to 'LOGOUT', logout_path %>
      </li>
    <% end %>
    </li>
   </ul>
  </section>
</nav>

<nav class="tab-bar show-for-small">
  <a class="left-off-canvas-toggle menu-icon" aria-expanded="false">
    <span>LOTTIFY ME</span>
  </a>
</nav>
