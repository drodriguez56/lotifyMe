<meta name="viewport" content="width=device-width, initial-scale=1.0" />


<nav class="middle top-bar hide-for-small navi" data-topbar role="navigation">
  <section class="middle tab-bar-section">
    <img src="<%= asset_path 'lotifyme.png' %>" class="logo"></img>
  </section>

 <section class="top-bar-section">
  <ul class="right">
      <% if !session[:user_id] %>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Sign Up', signup_path %></li>
     <% else %>
     <% @session_id = session[:user_id] %>
        <% if User.find(@session_id).username %>
          <li id='username'><%= User.find(@session_id).username %></li>
        <% end %>
          <li class='navrigth'><%= link_to 'My Profile', user_path(@session_id) %></li>
          <li class='navrigth'><%= link_to 'Edit Profile', edit_user_path(@session_id) %></li>
          <li><%= link_to 'Logout', logout_path %></li>
     <% end %>
   </ul>
  </section>
</nav>

<nav class="tab-bar show-for-small">
  <a class="left-off-canvas-toggle menu-icon" aria-expanded="false">
    <span></span>
  </a>
  <section class="middle tab-bar-section">
    <img src="<%= asset_path 'lotifyme.png' %>" class="logo2"></img>
  </section>
</nav>
<aside class="left-off-canvas-menu">
  <ul class="off-canvas-list">
    <li>
     <% if !session[:user_id] %>
      <li><%= link_to 'LOGIN', login_path %></li>
      <li><%= link_to 'SIGN UP', signup_path %></li>
      <li><%= link_to 'HOME', root_path %></li>
     <% else %>
      <% @session_id = session[:user_id] %>
      <li class="active" >
        <a href="/users/<%= session[:user_id] %>"><%= User.find(@session_id).username %></a>
      </li>
      <li>
        <%= link_to 'MY PROFILE', user_path(@session_id) %>
      </li>
      <li>
        <%= link_to 'EDIT PROFILE', edit_user_path(@session_id) %>
      </li>
      <li>
        <%= link_to 'LOGOUT', logout_path %>
      </li>
    <% end %>
    </li>
  </ul>
</aside>

